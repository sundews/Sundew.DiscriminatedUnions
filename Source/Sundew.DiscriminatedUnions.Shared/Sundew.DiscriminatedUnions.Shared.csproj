<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <IsPackable>false</IsPackable>
    <DocumentationFile>$(OutputPath)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Api\**" />
    <EmbeddedResource Remove="Api\**" />
    <None Remove="Api\**" />
  </ItemGroup>
  
  <ItemGroup>
    <AdditionalFiles Include="stylecop.json" />
    <SundewDiscriminatedUnions Include="..\Sundew.DiscriminatedUnions\CaseTypeAttribute.cs" />
    <SundewDiscriminatedUnions Include="..\Sundew.DiscriminatedUnions\DiscriminatedUnion.cs" />
    <SundewDiscriminatedUnions Include="..\Sundew.DiscriminatedUnions\UnreachableCaseException.cs" />
    <SundewDiscriminatedUnions Include="..\Sundew.DiscriminatedUnions\GeneratorFeatures.cs" />
    <EmbeddedResource Remove="..\Sundew.DiscriminatedUnions\CaseTypeAttribute.cs" />
    <EmbeddedResource Remove="..\Sundew.DiscriminatedUnions\DiscriminatedUnion.cs" />
    <EmbeddedResource Remove="..\Sundew.DiscriminatedUnions\UnreachableCaseException.cs" />
    <EmbeddedResource Remove="..\Sundew.DiscriminatedUnions\GeneratorFeatures.cs" />
    <EmbeddedResource Include="@(SundewDiscriminatedUnions)" LinkBase="Api" />
    <Compile Remove="..\Sundew.DiscriminatedUnions\CaseTypeAttribute.cs" />
    <Compile Remove="..\Sundew.DiscriminatedUnions\DiscriminatedUnion.cs" />
    <Compile Remove="..\Sundew.DiscriminatedUnions\UnreachableCaseException.cs" />
    <Compile Remove="..\Sundew.DiscriminatedUnions\GeneratorFeatures.cs" />
    <Compile Include="@(SundewDiscriminatedUnions)" LinkBase="Api" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="IsExternalInit" Version="1.0.3">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="3.3.4">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.3.1" />
    <PackageReference Include="Nullable" Version="1.3.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="StyleCop.Analyzers" Version="1.2.0-beta.435">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>
